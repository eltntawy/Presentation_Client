<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Simple Presentation"
            android:id="@+id/btnSimplePresentation"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Home/End Presentation"
            android:id="@+id/btnHomeEndPresentation"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Black/White Presentation"
            android:id="@+id/button3" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Direction Presentation"
            android:id="@+id/btnDirection" android:layout_gravity="center_horizontal"/>
</LinearLayout>