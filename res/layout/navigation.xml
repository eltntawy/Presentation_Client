<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:keepScreenOn="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Count"
            android:onClick="startCounter"
            android:id="@+id/btnStartCounter"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pause Count"
            android:id="@+id/btnPause"
            android:onClick="pauseCounter"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="40pt"
        android:id="@+id/lblTimer" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:weightSum="1">
        <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Left"
                android:id="@+id/btnLeft" android:layout_weight="0.50"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Right"
                android:id="@+id/btnRight"
            android:layout_weight="0.50" />
    </LinearLayout>
</LinearLayout>